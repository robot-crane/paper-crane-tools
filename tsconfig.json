{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./out",
    "rootDir": "src",
    "strict": true,
    "module": "ESNext",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declarationMap": true, // enables importers to jump to source
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out"]
}
